{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all"
		}
	},
	"linter": {
		"rules": {
			"recommended": true
		}
	},
	"overrides": [
		{
			"includes": ["**/*.svelte"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					},
					"style": {
						"useConst": "off"
					}
				}
			}
		}
	]
}
